{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block main %}
<div class="container">
    <div class="login-form mt-4 p-4">

    <h1 class="text-center m-5">Inscription</h1>

        {{ form_errors(registrationForm, {
            'attr': {'class': "alert-danger danger badge-danger"}
        }) }}

     {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.firstname, {
            'attr': {'class': 'form-control'},
            'label': 'Prénom'
        }) }}

        {{ form_row(registrationForm.lastname, {
            'attr': {'class': 'form-control'},
            'label': 'Nom'
        }) }}

        {{ form_row(registrationForm.email, {
            'attr': {'class': "form-control"}
        }) }}

        {{ form_row(registrationForm.password, {
            'label': 'Mot de passe (au moins 12 caractères avec 1 minuscule, 1 majuscule, 1 chiffre, 1 caractère spéciale)',
            'attr': {'class': "form-control"}
        }) }}

        {{ form_row(registrationForm.agreeTerms) }}

        <button class="btn btn-dark m-3" type="submit">S'inscrire</button>
    {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
