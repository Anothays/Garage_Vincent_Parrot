{% extends 'base.html.twig' %}

{% block title %}Vérifier Email{% endblock %}

{% block main %}
    <div class="container vh-100">
        <div class="row">
            <div class="login-form mt-4 p-4">

{#                {{ dump(sendEmailForm) }}#}

                <h1 class="h3 mb-3 font-weight-normal">Votre compte doit être validé</h1>

                <p>
                    Un email de vérification vous a été envoyé. Veuillez cliquer sur le lien qu'il contient
                    pour terminer la création de votre compte.
                </p>

                {{ form_start(sendEmailForm) }}


                    {{ form_widget(sendEmailForm.email, {
                        'attr': {'hidden': 'true', 'value': app.request.get("email")}
                    }) }}

                    <button type="submit" class="btn btn-dark  m-3">Renvoyer l'email</button type="submit" >

                {{ form_end(sendEmailForm) }}


            </div>
        </div>
    </div>
{% endblock %}
