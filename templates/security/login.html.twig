{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
<div class="container">
    <div class="login-form mt-4 p-4">
        <h1 class="text-center m-5">Accès à votre compte</h1>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                    <i class="fas fa-times-circle mr-1"></i>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}


            <div class="form-group">
                <label class="form-control-label required" for="inputEmail">Email</label>
                <div class="form-widget">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
            </div>


            <div class="form-group">
                <label class="form-control-label required" for="inputPassword">Mot de passe</label>
                <div class="form-widget">
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
                {% if forgot_password_enabled|default(false) %}
                    <div class="form-text">
                        <a href="{{ forgot_password_path|default('#') }}">{{ _forgot_password_label }}</a>
                    </div>
                {% endif %}
            </div>



            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-dark  m-3" type="submit">
                Se connecter
            </button>
            <span>Vous n'avez pas encore de compte client ? <a href={{ path('app_register') }}>créez-en un !</a></span>
        </form>
    </div>
</div>
{% endblock %}
